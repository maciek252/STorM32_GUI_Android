
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PID"
            android:id="@+id/textView16"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gyro LPF"
            android:id="@+id/textView_5_gyroLpfLabel" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_5_gyroLpf"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imu2 FeedForward LPF"
            android:id="@+id/textView3" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_5_imu2_feedForward_lpf"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Voltage Limit"
            android:id="@+id/textView21" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_5_lowVoltageLimit"
            android:spinnerMode="dropdown" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simplified"
            android:id="@+id/fragment_pid_checkBoxSimplified"
            android:checked="false" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:background="#5b5a5a">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Pitch P"
                android:id="@+id/textView"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_pid_pitchP"
                android:contextClickable="true"
                android:editable="true"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pitch I"
                android:id="@+id/textView20"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_pid_pitchI"
                android:contextClickable="true"
                android:editable="true"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pitch D"
                android:id="@+id/textView23"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_pid_pitchD"
                android:contextClickable="true"
                android:editable="true"
                android:layout_gravity="center_horizontal"
                android:layout_row="2"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll P"
                android:id="@+id/textView22"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_pid_rollP"
                android:contextClickable="true"
                android:editable="true"
                android:layout_gravity="center_horizontal"
                android:layout_row="3"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll I"
                android:id="@+id/textView24"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_pid_rollI"
                android:contextClickable="true"
                android:editable="true"
                android:layout_gravity="center_horizontal"
                android:layout_row="4"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll D"
                android:id="@+id/textView25"
                android:layout_row="5"
                android:layout_column="0" />

            <TextView
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_pid_rollD"
                android:contextClickable="true"
                android:editable="true"
                android:layout_gravity="center_horizontal"
                android:layout_row="5"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yaw P"
                android:id="@+id/textView26"
                android:layout_row="6"
                android:layout_column="0" />

            <TextView
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_pid_yawP"
                android:contextClickable="true"
                android:editable="true"
                android:layout_gravity="center_horizontal"
                android:layout_row="6"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yaw I"
                android:id="@+id/textView27"
                android:layout_row="7"
                android:layout_column="0" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_pid_yawI"
                android:contextClickable="true"
                android:editable="true"
                android:layout_gravity="center_horizontal"
                android:layout_row="7"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yaw D"
                android:id="@+id/textView28"
                android:layout_row="8"
                android:layout_column="0" />

            <TextView
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_pid_yawD"
                android:contextClickable="true"
                android:editable="true"
                android:layout_gravity="center_horizontal"
                android:layout_row="8"
                android:layout_column="2" />
        </GridLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pitch Motor Vmax"
            android:id="@+id/textView14" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_5_pitchMotorVmax"
            android:contextClickable="true"
            android:editable="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll Motor Vmax"
            android:id="@+id/textView15" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_5_rollMotorVmax"
            android:contextClickable="true"
            android:editable="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yaw Motor Vmax"
            android:id="@+id/textView18" />

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_5_yawMotorVmax"
            android:contextClickable="true"
            android:editable="true"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>